<!-- app/views/tmdb/search.html.erb -->
<h1>Buscar películas en TMDb</h1>

<!-- Formulario para buscar películas en TMDb -->
<%= form_with url: search_tmdb_index_path, method: :get, local: true do %>
  <%= label_tag :query, "Nombre de la película" %>
  <%= text_field_tag :query, params[:query] %>
  <%= submit_tag "Buscar" %>
<% end %>

<!-- Mostrar resultados -->
<% if @tmdb_movies.present? %>
  <h2>Resultados de la búsqueda:</h2>
  <ul>
    <% @tmdb_movies.each do |movie| %>
      <li><%= movie['title'] %> - <%= movie['release_date'] %></li>
    <% end %>
  </ul>
<% elsif params[:query].present? %>
  <p>No se encontraron resultados para "<%= params[:query] %>".</p>
<% end %>
