<section class="movie-details">
  <div class="image">
    <%= image_tag(@movie.image_file_name) if @movie.image_file_name %>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1> <h2> <%= @movie.director %> </h2>
    <h2>
      <%= pluralize(@movie.duration, "spot") %>
    </h2>
    <h3>
      <%= day_and_time(@movie) %> &bull; <%= @movie.rating %>
    </h3>
    <p>
      <%= @movie.description %>
    </p>

    <div class="reviews">
    <%= average_stars(@movie) %>
    
     <%= link_to "Write a review!", new_movie_review_path(@movie),
     class: 'review' %>
    <p>
    <%= link_to "See the reviews", movie_reviews_path(@movie) %>
    </p>
    </div>
       <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
  </div>
</section>

<section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", @movie, class: "button",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</section>